<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"


    tools:context=".SettingActivity">
      <android.support.design.widget.AppBarLayout
          android:id="@+id/app_bar_settings"
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:background="#0D0D0E"
          android:layout_marginTop="00dp"
          >
          <android.support.v7.widget.Toolbar
              android:id="@+id/toolbar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <TextView
                      android:id="@+id/close_settings"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Close"
                      android:textColor="#ffff"
                      android:textSize="20dp"
                      android:textStyle="bold"
                      android:layout_alignParentStart="true"/>
                  <TextView
                      android:id="@+id/update_settings"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Update"
                      android:textColor="#ffff"
                      android:textSize="20dp"
                      android:textStyle="bold"
                      android:layout_alignParentEnd="true"
                      android:layout_marginRight="15dp"
                      />



              </RelativeLayout>

          </android.support.v7.widget.Toolbar>
      </android.support.design.widget.AppBarLayout>

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/settings_profile_image"
           android:layout_width="130dp"
           android:layout_height="130dp"
           android:src="@drawable/profile"
           android:layout_below="@id/app_bar_settings"
           android:layout_marginTop="20dp"
           android:layout_centerHorizontal="true"
           />

    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"
        android:fontFamily="serif"
        android:textColor="#E6E1E1"
        android:textSize="20dp"
        android:layout_below="@id/settings_profile_image"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/l_l_1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:background="@drawable/curve_shape"
        android:text="Mobile Number"

        android:paddingStart="15dp"
        android:fontFamily="serif"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="250dp"
        android:layout_below="@id/profile_image_change_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"

            android:fontFamily="serif"
            android:layout_marginTop="251dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_l_2"
        android:layout_below="@id/l_l_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:text="Email Id"
            android:background="@drawable/curve_shape"

            android:fontFamily="serif"
            android:paddingStart="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profile_image_change_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="09dp"
            android:textStyle="bold"

            android:fontFamily="serif"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_l_3"
        android:layout_below="@id/l_l_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:text="My Address"

            android:paddingStart="15dp"
            android:background="@drawable/curve_shape"

            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_below="@id/profile_image_change_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:layout_marginTop="09dp"

            android:fontFamily="serif"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l_l_4"
        android:layout_below="@id/l_l_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:background="@drawable/curve_shape"

            android:text="Change Password"
            android:fontFamily="serif"

            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_below="@id/profile_image_change_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/l_l_4"
            android:layout_marginRight="0dp"
            android:fontFamily="serif"
            android:text="Change"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="09dp"/>

    </LinearLayout>
</RelativeLayout>