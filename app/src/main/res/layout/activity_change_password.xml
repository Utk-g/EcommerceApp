<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/app_bar_change_pswrd"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:layout_marginTop="7dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_downward_black_24dp"
                android:layout_marginStart="245dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="07dp"/>
        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

<LinearLayout
    android:id="@+id/linear_old_pswrd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/app_bar_change_pswrd"
    android:layout_marginStart="16dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/old_password"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#111010"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/enter_old_password"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/linear_new_pswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear_old_pswrd"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp">
    <TextView

        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#111010"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/enter_new_password"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_confirm_pswrd"
        android:layout_below="@+id/linear_new_pswrd"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp">
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#111010"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_text3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/retype_new_password"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    </LinearLayout>
    <Button
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/change_password"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/gradient3"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>